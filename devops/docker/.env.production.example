# RAM Comercios - Production Environment Variables
# Copy to .env.production and fill with actual values

# Application
APP_NAME="RAM Comercios"
APP_ENV=production
APP_KEY=  # Run: php artisan key:generate
APP_DEBUG=false
APP_URL=https://comercios.redactivamexico.net
APP_ADMIN_URL=admin
APP_TIMEZONE=America/Mexico_City

# Localization
APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_MX
APP_CURRENCY=MXN

# Database (Bagisto MySQL Container)
DB_CONNECTION=mysql
DB_HOST=ramcomercios-mysql
DB_PORT=3306
DB_DATABASE=ram_comercios
DB_USERNAME=ramcomercios
DB_PASSWORD=  # CAMBIAR - Generar password fuerte

# Cache & Sessions (Redis)
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis
REDIS_HOST=ramcomercios-redis
REDIS_PORT=6379
REDIS_PASSWORD=  # CAMBIAR - Generar password fuerte (opcional pero recomendado)

# WoWonder SSO Integration
# URL interna del contenedor de WoWonder (v√≠a red Docker compartida)
WOWONDER_API_URL=http://ram_app_1
WOWONDER_SERVER_KEY=  # CAMBIAR - Copiar de WoWonder admin
WOWONDER_PURCHASE_CODE=  # CAMBIAR - Copiar de WoWonder admin

# Email (Production SMTP)
MAIL_MAILER=smtp
MAIL_HOST=  # e.g., smtp.gmail.com, smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=  # CAMBIAR
MAIL_PASSWORD=  # CAMBIAR
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=comercios@redactivamexico.net
MAIL_FROM_NAME="RAM Comercios"

# Admin Email
ADMIN_MAIL_ADDRESS=admin@redactivamexico.net
ADMIN_MAIL_NAME="Admin RAM"

# Elasticsearch
SCOUT_DRIVER=elasticsearch
ELASTICSEARCH_HOST=ramcomercios-elasticsearch
ELASTICSEARCH_PORT=9200

# Stripe (Production Keys)
STRIPE_KEY=  # CAMBIAR - pk_live_xxxxx
STRIPE_SECRET=  # CAMBIAR - sk_live_xxxxx

# AWS S3 (if using for storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=error
LOG_DEPRECATIONS_CHANNEL=null

# Security
BCRYPT_ROUNDS=12
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
RESPONSE_CACHE_ENABLED=true

# Broadcasting (if using WebSockets)
BROADCAST_CONNECTION=log

# Filesystem
FILESYSTEM_DISK=public

# Vite
VITE_APP_NAME="${APP_NAME}"

# MySQL Root Password (for MySQL container)
MYSQL_ROOT_PASSWORD=  # CAMBIAR - Generar password fuerte
